---
interface Experience {
  role: string
  aboutRole: string
  company?: string
  companyUrl?: string
  date: string
}

const experienceData: Experience[] = [
  {
    role: 'Freelancer',
    aboutRole: 'For the last few years, I have worked as a freelance frontend developer, specializing in creating innovative solutions leveraging my experience in frontend technologies that allow companies and businesses to showcase and market their products with exceptional effectiveness.',
    date: '2021 - Present',
  },
]
---
<section class="flex flex-col space-y-4 py-14">
  
  <div class="flex flex-col space-y-4">
    <h2 class="text-xl font-medium">Experience</h2>
  </div>

  <ol class="relative space-y-6 border-s-2 border-neutral-300 dark:border-neutral-800">
    {
      experienceData.map(({ role, aboutRole, date }) =>(
        <li class="ms-5 mt-1">
          <div class="absolute -start-[6.5px] mt-2 h-3 w-3 rounded-full border border-neutral-400 bg-neutral-200 dark:border-neutral-600 dark:bg-neutral-800" />
          <time
            class="mb-2 font-mono text-xs font-normal leading-none text-neutral-600 dark:text-neutral-400"
          >
            {date}
        </time>
        <div class="mt-2 flex flex-col space-y-0.5">
          <h3 class="text-lg font-semibold tracking-tight text-gray-900 dark:text-white">
            {role}
          </h3>
        </div>
        <p class="mt-3 text-pretty text-sm dark:text-neutral-400">
          {aboutRole}
        </p>
        </li>
      ))
    }
  </ol>
  
</section>