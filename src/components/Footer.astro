---
import ArrowRightUp from "./icons/ArrowRightUp.astro"

const currentYear = new Date().getFullYear()
const email = "mailto:cascolucasisaias@gmail.com"
---

<footer
  class="fixed bottom-0 pb-8 container mt-10 flex max-w-4xl flex-col items-center justify-center space-y-1 md:flex-row md:justify-between md:space-y-0"
>
  <a
    class="flex opacity-80 transition-opacity duration-150 hover:opacity-100"
    href={email}
    target="_blank"
  >
    <p class="font-serif">Contact me and let's build amazing things</p>
    <span 
        class="opacity-50 group-hover:opacity-100 group-hover:translate-x-[1.5px] duration-200"
      >
        <ArrowRightUp />
      </span>
  </a>
  <div class="opacity-80 flex items-center space-x-1 text-sm md:text-md flex-wrap">
    <h2>Lucas Casco</h2>
    <span class="text-gray-500 dark:text-gray-400"> - </span>
    <p>{currentYear}</p>
  </div>
</footer>
<style>
  @media (max-width: 1146px) {
  footer {
    flex-direction: column;
    align-items: center;
  }

  footer a {
    margin-bottom: 10px;
  }

  footer div {
    justify-content: center; 
  }
}
</style>