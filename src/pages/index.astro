---
import Layout from '../layouts/Layout.astro';

const socialMediaLinks = [
  {
		name: 'LinkedIn', 
		url: 'https://www.linkedin.com/in/lucascodev/'
	},
  {
		name: 'GitHub', 
		url: 'https://github.com/isaias-alt/'
	},
  {
		name: 'Twitter', 
		url: 'https://twitter.com/lucascodev/'
	},
  {
		name: 'Instagram', 
		url: 'https://www.instagram.com/lucascodev/'
	},
];
---

<Layout 
	title='Porfolio de Lucas Casco - Desarrollador FrontEnd con 3 años de experiencia'
	description='Contrata a Lucas para crear tu aplicación web o móvil. Desarrollador FrontEnd especializado en crear aplicaciones únicas.'
>
	<main class="flex flex-col items-center justify-center min-h-screen p-4 sm:p-6 md:p-8 lg:p-10">
		<div class="text-center">
			<img src="./lucascodev.webp" alt="foto de Lucas Casco" class="w-32 h-32 rounded-full mx-auto mb-4" />
			<h1 class="text-2xl font-bold mb-2 sm:text-3xl md:text-4xl">Lucas Isaías Casco</h1>
			<p class="mb-6 sm:text-lg md:text-xl">Desarrollador FrontEnd con 3 años de experiencia</p>
			<ul class="flex flex-wrap justify-center space-x-4 sm:space-x-6">
				{socialMediaLinks.map(({ url, name }) => (
					<li>
						<a
							href={url} 
							target="_blank" 
							rel="noopener noreferrer"
							class="relative block px-2 py-2 transition hover:text-blue-400"
						>
							<p 
								class="inline-flex items-center justify-center gap-2 px-4 py-1 text-gray-800 transition bg-gray-100 border border-gray-300 rounded-full dark:bg-gray-800 dark:border-gray-600 dark:text-white text-md hover:bg-gray-900 hover:border-gray-700 group max-w-fit hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black"
							>{name}</p>
						</a>
					</li>
				))}
			</ul>
		</div>
	</main>
</Layout>
